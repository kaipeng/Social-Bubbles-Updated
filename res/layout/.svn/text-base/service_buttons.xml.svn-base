<?xml version="1.0" encoding="utf-8"?>
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="0"
    >
    <ImageButton android:id="@+id/foursquare_button"
		style="@style/ButtonStripLeft"
		android:scaleType="fitCenter" 
		
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:layout_weight=".25"
        android:src="@drawable/foursquarelogo"
        android:contentDescription="Foursquare Login/Logout Button"
        />
    <ImageButton android:id="@+id/facebook_button"
		style="@style/ButtonStripRight"
		android:scaleType="fitCenter"
		
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:layout_weight=".25"
        android:src="@drawable/facebooklogo"
        android:contentDescription="Facebook Login/Logout Button"
        />
	</LinearLayout>